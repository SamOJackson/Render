<h1>{{title}}</h1>
<p>Contact Form: Please leave me a message along with your email.</p>
<form action="mailto:jacksonosamuel@gmail.com" method="post" enctype="text/plain">
    <input type="text" name="name" id="name" placeholder="Name" required></input>
    <input type="email" name="email" id="email" placeholder="Email" required></input>
    <input type="text" name="message" id="message" placeholder="Message" required></input>
    <input type="submit" value="Submit"></input>
</form>
<p id="return"></p>
<script>
    document.getElementById("submit").addEventListener("click", getInfo);
    
    function getInfo(){
        var name = document.getElementById("name").value;
        var email = document.getElementById("email").value;
        var message = document.getElementById("message").value;

        if(name == null || email == null || message == null){
            document.getElementById("return").value = "Invalid information.";
        }
        else{
            document.getElementById("return").value = "Message Sent.";
        }

    }

</script>
<p id="sent"></p>
<script>
    document.getElementById("sent").value = name + ", " + email + ", " + message;
</script>